{
    "name": "carsdotcom/php-request-class",
    "type": "library",
    "description": "Structure the logic around Guzzle API requests into object-oriented classes",
    "keywords": ["php", "laravel", "guzzle"],
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "ext-simplexml": "*",
        "carsdotcom/laravel-json-schema": "laravel-8.x-dev",
        "guzzlehttp/guzzle": "^7.5"
    },
    "require-dev": {
        "fakerphp/faker": "^1.9.1",
        "orchestra/testbench": "^6.33",
        "phpstan/phpstan": "^1.8",
        "phpunit/phpunit": "^9.5.10",
        "squizlabs/php_codesniffer": "^3.7",
        "timacdonald/log-fake": "^1.9"
    },
    "autoload": {
        "psr-4": {
            "Carsdotcom\\ApiRequest\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Carsdotcom\\ApiRequest\\ApiRequestProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
